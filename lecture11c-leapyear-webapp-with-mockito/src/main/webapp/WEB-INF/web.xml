<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>LeapYearVerifier</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>LeapYearController</display-name>
    <servlet-name>LeapYearController</servlet-name>
    <servlet-class>mypackage.controller.LeapYearController</servlet-class>
    <init-param>
      <param-name>success_page</param-name>
      <param-value>result.jsp</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>LeapYearController</servlet-name>
    <url-pattern>/result</url-pattern>
  </servlet-mapping>
</web-app>